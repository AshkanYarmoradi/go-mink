---
layout: null
permalink: /assets/js/search-data.json
---
{
{%- assign i = 0 -%}
{%- for page in site.html_pages -%}
  {%- if page.search_exclude != true -%}
    {%- assign page_content = page.content | strip_html | newline_to_br | replace: '<br />', ' ' | strip_newlines | normalize_whitespace -%}
    {%- if i > 0 -%},{%- endif %}
  "{{ i }}": {
    "doc": {{ page.title | jsonify }},
    "title": {{ page.title | jsonify }},
    "content": {{ page_content | truncate: 5000 | jsonify }},
    "url": {{ page.url | relative_url | jsonify }},
    "relUrl": {{ page.url | jsonify }}
  }
    {%- assign i = i | plus: 1 -%}
  {%- endif -%}
{%- endfor %}
}
